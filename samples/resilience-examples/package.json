{
  "name": "@sap-cloud-sdk/samples",
  "version": "0.0.1",
  "description": "SAP Cloud SDK for JS - Examples on Resilience",
  "author": "Frank Essenberger",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "npm run generate-client",
    "lint": "eslint \"src/**/*.ts\" && yarn prettier .",
    "lint:fix": "eslint \"src/**/*.ts\" --fix && yarn prettier . -w",
    "test": "jest",
    "generate-client": "npx generate-odata-client --inputDir resources/service-specs --outputDir src/generated --clearOutputDir --generateJs=false --serviceMapping=resources/service-specs/service-mapping.json"
  },
  "dependencies": {
    "@sap-cloud-sdk/odata-v2": "next",
    "@sap-cloud-sdk/http-client": "next",
    "@sap-cloud-sdk/connectivity": "next",
    "@sap-cloud-sdk/util" : "next",
    "@sap-cloud-sdk/resilience": "next",
    "@sap-cloud-sdk/generator": "next"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.33.1",
    "@sap-cloud-sdk/eslint-config": "^2.11.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-regex": "^1.10.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "29.3.1",
    "nock": "^13.2.4",
    "prettier": "2.5.1",
    "ts-jest": "29.0.3",
    "ts-loader": "9.2.6",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
